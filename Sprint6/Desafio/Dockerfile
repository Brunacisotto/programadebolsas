FROM python:3.11-slim 
# escolhendo o diret贸rio no container como /app
WORKDIR /app 
#copiando os arquivos desafio e requirements para o diret贸rio do container 
COPY desafio.py requirements.txt ./
#copiando a pasta data para o diret贸rio /app/data no container
COPY data/ ./data/
#instala as libs listadas no arquivo requirements (boto3 e pandas)
RUN pip install --no-cache-dir -r requirements.txt
# criando um volume para o diret贸rio /app/data
VOLUME /app/data
#executa o script desafio.py com Python, quando rodo o container
CMD ["python", "desafio.py"]
